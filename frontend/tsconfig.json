{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@pages/*": ["src/pages/*"],
      "@layouts/*": ["src/layouts/*"],
      "@sections/*": ["src/sections/*"],
      "@types/*": ["src/lib/types/*"],
      "@lib/*": ["src/lib/*"],
      "@utils/*": ["src/lib/utils/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}
