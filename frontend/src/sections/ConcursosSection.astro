---
import ConcursoCard from '@components/ConcursoCard.astro'
import type { Concurso } from '@lib/types/types'

const schemes = [
  {
    color1: '#ff416c',
    color2: '#ff4b2b',
    color3: '#f9d423',
    speed: 0.3,
    swirl: 1.5,
    swirlIterations: 8,
    shapeScale: 0.7,
  },
  {
    color1: '#00c6ff',
    color2: '#0072ff',
    color3: '#00f260',
    speed: 0.4,
    swirl: 2.0,
    swirlIterations: 12,
    shapeScale: 0.5,
  },
  {
    color1: '#833ab4',
    color2: '#fd1d1d',
    color3: '#fcb045',
    speed: 0.2,
    swirl: 1.8,
    swirlIterations: 10,
    shapeScale: 0.6,
  },
  {
    color1: '#ff9a9e',
    color2: '#fad0c4',
    color3: '#fbc2eb',
    speed: 0.35,
    swirl: 1.3,
    swirlIterations: 9,
    shapeScale: 0.65,
  },
  {
    color1: '#a18cd1',
    color2: '#fbc2eb',
    color3: '#f9f9f9',
    speed: 0.25,
    swirl: 2.3,
    swirlIterations: 11,
    shapeScale: 0.55,
  },
  {
    color1: '#f6d365',
    color2: '#fda085',
    color3: '#fbc2eb',
    speed: 0.3,
    swirl: 1.6,
    swirlIterations: 10,
    shapeScale: 0.6,
  },
  {
    color1: '#89f7fe',
    color2: '#66a6ff',
    color3: '#c2e9fb',
    speed: 0.2,
    swirl: 1.4,
    swirlIterations: 8,
    shapeScale: 0.5,
  },
  {
    color1: '#84fab0',
    color2: '#8fd3f4',
    color3: '#a6c1ee',
    speed: 0.3,
    swirl: 1.9,
    swirlIterations: 9,
    shapeScale: 0.7,
  },
  {
    color1: '#ffecd2',
    color2: '#fcb69f',
    color3: '#ff9a9e',
    speed: 0.3,
    swirl: 1.5,
    swirlIterations: 12,
    shapeScale: 0.65,
  },
]

const { concursos } = Astro.props
---

<section class="bg-secondary py-10 px-4 max-w-6xl mx-auto z-10 space-y-12">
  <h2
    class="text-5xl text-gray-300 text-center font-merriweather font-bold tracking-wide"
  >
    Concursos
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {
      concursos.map((concurso: Concurso, index: number) => {
        const scheme = schemes[index % schemes.length]
        return <ConcursoCard concurso={concurso} scheme={scheme} />
      })
    }
  </div>

  {
    concursos.length === 0 && (
      <p class="text-center text-gray-200">
        No hay concursos disponibles en este momento.
      </p>
    )
  }
</section>
